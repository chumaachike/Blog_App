
  <div class="user-details">
    <img src=<%@user.photo%> alt="user photo">
    <h3><%=@user.name%></h3>
    <p>Number of posts: <%= @user.post_counter%></p>
  </div>
    <div class="bio">
    <h3>Bio</h3>
    <p><%= @user.bio%>
    </div>
  <% if @user.recent_posts.size.zero?%>
    <p>There are no posts yet</p>
    <% else %>
      <% @user.recent_posts.each do |post|%>
        <p><%= link_to post.text, user_post_path(@user.id, post.id)%></p>
      <% end %>
    <% end %>
    <button><%= link_to "See all posts", user_posts_path(@user) %></button> 